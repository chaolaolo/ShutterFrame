<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Bạn muốn chuyển vào thùng rác? Nội dung sẽ bị xóa khỏi tất cả thư mục."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_move_to_trash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển vào thùng rác"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:background="@drawable/button_bg_outline_black"
        app:backgroundTint="@null"
        app:icon="@drawable/outline_delete"
        app:iconTint="@color/black" />

</LinearLayout>